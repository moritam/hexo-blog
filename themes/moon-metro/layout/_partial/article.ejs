<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <% if(index) { %>
    <div class="post-content-index">
  <% } else { %>
    <div class="post-content">
  <% } %>
      <% if (index) { %>
        <header>
          <div class="icon"></div>

            <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
             &nbsp; &nbsp;
            <%-  partial('post/title') %>

        </header>
      <% } %>
      <div class="entry">
        <% if (index){ %>
        <% } else { %>
          <%- item.content %>
        <% } %>
      </div>
      <footer>
        <% if (index){ %>
          <div class="alignright">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %><i class="fa fa-long-arrow-right fa-1"></i></a>
          </div>
        <% } else { %>
          <%- partial('post/category') %>
          <%- partial('post/tag') %>
          <%- partial('post/share') %>
          <%- partial('post/pagination') %>
        <% } %>
        <div class="clearfix"></div>
      </footer>
    </div>
</article>

<%- partial('comment') %>
